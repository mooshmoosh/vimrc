#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

PS1='[\u@\h \W]\$ '
shopt -s checkwinsize

# This should give me more bash history, appending instead of overwriting
# the bashhistory file
shopt -s histappend

alias vimdiff='nvim -d'
alias icat='kitty +kitten icat'

alias sql='q -O -T -d, -H'

function vim() {
    echo "opeing nvim: $@"
    if [ "$IN_NVIM_TERMINAL" != "YES" ]
    then
        eval "nvim $@"
    else
        eval "nvr --remote $@"
    fi
}
if [ "$ENVIRONMENT_COMPUTER" == "WORK" ]
then
    # These paths are only relevent at work
    PATH=$PATH:/Users/Mischlewski/bin:/Users/Mischlewski/.pyenv/versions/3.6.0/bin:/Users/Mischlewski/.pyenv/versions/3.7.0/bin
    clip_command="pbcopy"

    # Set the max size of the bash history to be massive
    HISTFILESIZE=10000
    HISTSIZE=10000
fi
if [ "$ENVIRONMENT_COMPUTER" == "HOME" ]
then
    # These paths are only relevent at home
    PATH=$PATH:/home/will/Documents/Programming/hackerscripts
    PATH=$PATH:/home/will/bin
    PATH=$PATH:/home/will/scripts
    PATH=$PATH:/home/will/.local/bin
    alias ls='ls --color=auto'
    clip_command="xclip -in -selection \"clipboard\""

    # Set the max size of the bash history to be massive
    HISTFILESIZE=-1
    HISTSIZE=-1
fi


alias  thumb="python3 -c 'print(\"\U0001F44D\")' | ""$clip_command"
alias  panda="python3 -c 'print(\"\U0001F43C\")' | ""$clip_command"
alias bottle="python3 -c 'print(\"\U0001F37E\")' | ""$clip_command"
alias   cool="python3 -c 'print(\"\U0001F60E\")' | ""$clip_command"

export VISUAL=nvim
export EDITOR="$VISUAL"

source ~/$VIMRC_DIRECTORY/git-completion.bash
source ~/$VIMRC_DIRECTORY/completions.bash
source ~/completions.bash
